@model IEnumerable<situationWebBTS.ViewModels.EnrollmentDateGroup>

<h3>Inscriptions</h3>

<table>
    <tr>
        <th>
            Date
        </th>
        <th>
            Etudiants
        </th>
        <th>
            Moyenne
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td width="20%">
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td width="20%">
                @item.StudentCount
            </td>
            <td width="20%">
                @try
                { @Math.Round(decimal.Parse(item.GradeAverage.Value.ToString()), 2);
                }
                catch
                { @item.GradeAverage;
                }
            </td>
        </tr>
    }
</table>
